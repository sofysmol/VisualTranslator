<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_main">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_main">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/icon_hw_big"
                    android:layout_height="@dimen/icon_hw_big"
                    android:src="@drawable/delete"
                    android:tint="@color/colorGreyIcon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_main"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_big_card_size"
                android:text="Мама"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mom"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_main"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_big_card_size"
                android:text="Мom"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_width"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin_main">
                <ImageView
                    android:layout_width="@dimen/icon_hw_big"
                    android:layout_height="@dimen/icon_hw_big"
                    android:src="@drawable/plus"
                    android:layout_weight="0.33"
                    android:tint="@color/colorGreyIcon"/>
                <ImageView
                    android:layout_width="@dimen/icon_hw_big"
                    android:layout_height="@dimen/icon_hw_big"
                    android:src="@drawable/rotate"
                    android:layout_weight="0.33"
                    android:tint="@color/colorGreyIcon"/>

                <ImageView
                    android:layout_width="@dimen/icon_hw_big"
                    android:layout_height="@dimen/icon_hw_big"
                    android:src="@drawable/volume"
                    android:layout_weight="0.33"
                    android:tint="@color/colorGreyIcon"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>