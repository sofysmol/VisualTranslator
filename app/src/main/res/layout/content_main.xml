<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.Activity.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <!--android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
       <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_width"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/header_padding"
            android:paddingRight="@dimen/header_padding"
            android:background="@color/colorHeader"
            android:elevation="5dp">
            <Spinner
                android:id="@+id/input_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:background="@color/colorHeader"
                android:gravity="right">
            </Spinner>
            <ImageView
                android:id="@+id/replace_button"
                android:layout_width="@dimen/icon_hw"
                android:layout_height="@dimen/icon_hw"
                android:src="@drawable/replace"
                android:layout_gravity="center"
                android:tint="@color/colorGreyIcon"
                android:layout_marginRight="@dimen/header_padding"
                android:layout_marginLeft="@dimen/header_padding"
                 />
            <Spinner
                android:id="@+id/output_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:background="@color/colorHeader">
            </Spinner>
        </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/margin_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_main">
            <ImageView
                android:id="@+id/delete_button"
                android:layout_width="@dimen/icon_hw"
                android:layout_height="@dimen/icon_hw"
                android:layout_marginRight="@dimen/icon_litle_margin"
                android:layout_gravity="right"
                android:tint="@color/colorGreyIcon"
                android:src="@drawable/delete"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_height"
                android:textSize="@dimen/text_input_size"
                android:text="Мама мыла раму"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/picturs_button"
                    android:layout_width="@dimen/icon_hw"
                    android:layout_height="@dimen/icon_hw"
                    android:src="@drawable/ic_menu_gallery"
                    android:tint="@color/colorAccent"
                    android:layout_gravity="bottom"/>
                <ImageView
                    android:id="@+id/speak_input_button"
                    android:layout_width="@dimen/icon_hw"
                    android:layout_height="@dimen/icon_hw"
                    android:layout_marginLeft="@dimen/margin_between_icon_input"
                    android:src="@drawable/volume"
                    android:tint="@color/colorGreyIcon"
                    android:layout_gravity="bottom"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
<!--android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"-->
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cart_output_height"
        android:layout_marginTop="@dimen/margin_main">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_main"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/translate_from"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/subheader_text_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Yandex"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/subheader_text_size"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/speak_output_button"
                    android:layout_width="@dimen/subheader_text_size"
                    android:layout_height="@dimen/subheader_text_size"
                    android:layout_gravity="right"
                    android:src="@drawable/volume"
                    android:tint="#ffffff"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_for_text"
                android:textSize="@dimen/text_input_size"
                android:text="Mam soap frame"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/margin_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
        app:layoutManager="android.support.v7.widget.GridLayoutManager">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>
